.env
.env.local
.env.production
.env.staging

# Firebase
.firebase/
firebase-debug.log
firestore-debug.log
ui-debug.log

# Node modules
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Logs
*.log
logs/

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# IDE and editor files
.vscode/
.idea/
*.swp
*.swo
*~

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

